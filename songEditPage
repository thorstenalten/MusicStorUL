using System;
using System.Collections.Generic;
using System.Linq;
using System.Web;
using System.Web.UI;
using System.Web.UI.WebControls;
using System.Data;
using System.Data.SqlClient;
using System.Configuration;
using System.IO;
using System.Text.RegularExpressions;



public partial class SongEditPage : System.Web.UI.Page
{

    protected void Page_Load(object sender, EventArgs e)
    {
        if (!IsPostBack)
        {
            makeDDL();
        }
    }


    protected void btnRegister_Click(object sender, EventArgs e)
    {
        bool hasData = false;
        if (IsValid)
        {
            SqlConnection connection = new SqlConnection(@"Data Source=(LocalDB)\v11.0;AttachDBFilename=|DataDirectory|\MusicStorDB.mdf;Integrated Security=True;");
            SqlCommand insertCommand = new SqlCommand("INSERT INTO songOptional VALUES(@SID, @AlbumArtwork, @Genre, @Description)", connection);
            SqlCommand selectCommand = new SqlCommand("SELECT SID FROM songOptional where SID = " + Convert.ToInt32(DropDownList1.SelectedItem.Value), connection);
            SqlCommand updateCommand = new SqlCommand("UPDATE songOptional SET AlbumArtwork = @AlbumArtwork, Genre = @Genre, Description = @Description WHERE SID = " + DropDownList1.SelectedItem.Value, connection);
            //TODO - file path stuff
            string imgSrc = getFilePath();
            string genre = txtGenre.Text;
            string description = txtDescription.Text;
            try
            {
                //selectedSong.Text = DropDownList1.SelectedItem.Value;
                connection.Open();
                //command.Parameters.Add("@UID", SqlDbType.Int);
                //command.Parameters["@UID"].Value = UID;

                SqlDataReader reader = selectCommand.ExecuteReader();
                if (reader.HasRows)
                {
                    hasData = true;
                }
                reader.Close();
                if(hasData)
                {
                    if (!string.IsNullOrWhiteSpace(imgSrc))
                        updateCommand.Parameters.Add("@AlbumArtwork", SqlDbType.VarChar).Value = imgSrc;
                    else if (CheckBox1.Checked == true)
                       updateCommand.Parameters.Add("@AlbumArtwork", SqlDbType.VarChar).Value = DBNull.Value;

                    if (!string.IsNullOrWhiteSpace(genre))
                        updateCommand.Parameters.Add("@Genre", SqlDbType.VarChar).Value = genre;
                    else
                        updateCommand.Parameters.Add("@Genre", SqlDbType.VarChar).Value = DBNull.Value;

                    if (!string.IsNullOrWhiteSpace(description))
                        updateCommand.Parameters.Add("@Description", SqlDbType.VarChar).Value = description;
                    else
                        updateCommand.Parameters.Add("@Description", SqlDbType.VarChar).Value = DBNull.Value;

                    updateCommand.ExecuteNonQuery();
                }
                else
                {
                    insertCommand.Parameters.Add("@SID", SqlDbType.Int).Value = Convert.ToInt32(DropDownList1.SelectedItem.Value);

                    if (!string.IsNullOrWhiteSpace(imgSrc))
                        insertCommand.Parameters.Add("@AlbumArtwork", SqlDbType.VarChar).Value = imgSrc;   
                    else
                        insertCommand.Parameters.Add("@AlbumArtwork", SqlDbType.VarChar).Value = DBNull.Value;

                    if (!string.IsNullOrWhiteSpace(genre))
                        insertCommand.Parameters.Add("@Genre", SqlDbType.VarChar).Value = genre;
                    else
                        insertCommand.Parameters.Add("@Genre", SqlDbType.VarChar).Value = DBNull.Value;

                    if (!string.IsNullOrWhiteSpace(description))
                        insertCommand.Parameters.Add("@Description", SqlDbType.VarChar).Value = description;
                    else
                        insertCommand.Parameters.Add("@Description", SqlDbType.VarChar).Value = DBNull.Value;

                    insertCommand.ExecuteNonQuery();
                }
                

                String sqlRating = "UPDATE songRating SET Rating = @rating WHERE SID = " + DropDownList1.SelectedItem.Value;
                String sqlHasRating = "Select * from songRating where SID = " + DropDownList1.SelectedItem.Value;
                String sqlInsert = "INSERT INTO songRating VALUES(@SID, @Rating, @UID)";


                SqlCommand cmdHasRating = new SqlCommand(sqlHasRating, connection);
                SqlDataReader breader = cmdHasRating.ExecuteReader();
                bool hasRating = false;
                if (breader.HasRows)
                {
                    hasRating = true;
                }
                breader.Close();

                if (hasRating)
                {
                    SqlCommand cmdRating = new SqlCommand(sqlRating, connection);
                    cmdRating.Parameters.Add("@rating", SqlDbType.Int);
                    cmdRating.Parameters["@rating"].Value = Convert.ToInt32(rdbRating.SelectedValue);

                    cmdRating.Parameters.Add("@UID", SqlDbType.Int);
                    cmdRating.Parameters["@UID"].Value = Request.Cookies["loginInfo"]["username"];
                    cmdRating.ExecuteNonQuery();
                }
                else
                {
                    SqlCommand insertRating = new SqlCommand(sqlInsert, connection);

                    insertRating.Parameters.Add("@SID", SqlDbType.Int);
                    insertRating.Parameters["@SID"].Value = DropDownList1.SelectedItem.Value;

                    insertRating.Parameters.Add("@rating", SqlDbType.Int);
                    insertRating.Parameters["@rating"].Value = rdbRating.SelectedValue;


                    insertRating.Parameters.Add("@UID", SqlDbType.Int);
                    insertRating.Parameters["@UID"].Value = Request.Cookies["loginInfo"]["username"];
                    insertRating.ExecuteNonQuery();
                }
                




                connection.Close();

                selectedSong.Text = "Success!";
            }
            catch(SqlException sqlEx)
            {
                Response.Write("</br>Error writing to database: " + sqlEx);
            }
        }

    }

    protected string getFilePath()
    {
        string filePath = "";
        if (FileUploadControl.HasFile)
        {
            try
            {
                if (checkIsImage(FileUploadControl.FileName))
                {
                    if (FileUploadControl.PostedFile.ContentLength < 24000000)
                    {
                        string filename = FileUploadControl.FileName;
                        FileUploadControl.SaveAs(Server.MapPath("~/SongImages/") + filename);
                        StatusLabel.Text = "Upload status: File uploaded!";
                        filePath =  "/SongImages/"+ filename;
                    }
                    else
                    {
                        StatusLabel.Text = "Upload status: The file has to be less than 3mb!";
                    }

                }
                else
                {
                    StatusLabel.Text = "Upload status: Only JPEG files are accepted!";
                }
            }
            catch (Exception ex)
            {
                StatusLabel.Text = "Upload status: The file could not be uploaded. The following error occured: " + ex.Message;
            }
        }
        return filePath;

    }

    public bool checkIsImage(string file)
    {
        string extension = Path.GetExtension(file);
        extension = extension.ToLower();
        switch (extension)
        {
            case ".jpg":
                return true;
            case ".jpeg":
                return true;
            case ".png":
                return true;
            default:
                return false;
        }

    }

    protected void makeDDL()
    {
        string cmdString = "SELECT SID,SName FROM Song where UID = " + Request.Cookies["loginInfo"]["username"];
        SqlCommand cmd = new SqlCommand(cmdString, new SqlConnection(@"Data Source=(LocalDB)\v11.0;AttachDBFilename=|DataDirectory|\MusicStorDB.mdf;Integrated Security=True"));
        cmd.Connection.Open();
        SqlDataReader ddlValues;
        ddlValues = cmd.ExecuteReader();
        DropDownList1.DataSource = ddlValues;
        DropDownList1.DataValueField = "SID";
        DropDownList1.DataTextField = "SName";
        DropDownList1.DataBind();
        cmd.Connection.Close();
        DropDownList1.Items.Insert(0, new ListItem("--Select Song--", ""));
    }

    protected void populateTextBoxes(object sender, EventArgs e)
    {
        SqlConnection connection = new SqlConnection(@"Data Source=(LocalDB)\v11.0;AttachDBFilename=|DataDirectory|\MusicStorDB.mdf;Integrated Security=True");
        SqlCommand selectCommand = new SqlCommand("SELECT AlbumArtwork,Genre,Description FROM songOptional where SID = " + Convert.ToInt32(DropDownList1.SelectedItem.Value), connection);

        try
        {
            connection.Open();
            SqlDataReader reader = selectCommand.ExecuteReader();
            while (reader.Read())
            {
                if (reader.GetValue(1) == DBNull.Value)
                    txtGenre.Text = "";
                else
                    txtGenre.Text = reader.GetString(1);
                if (reader.GetValue(2) == DBNull.Value)
                    txtDescription.Text = "";
                else
                    txtDescription.Text = reader.GetString(2);
            }
            connection.Close();
        }
        catch (SqlException sql)
        {
            Response.Write(sql);
        }
        
    }
    protected void btnBack_Click(object sender, EventArgs e)
    {
        Response.Redirect("SongInfoPage.aspx");
    }

}
